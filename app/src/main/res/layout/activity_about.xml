<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/ba"
    android:layout_height="match_parent"
    tools:context="com.example.android.capstone_project.Activities.About">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="43dp"
        android:gravity="center"
        android:text="Conestoga college Capstone Project"
        android:textColor="#336600"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="95dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="89dp"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="19dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="We are making a plant watering application and in this project, we will water plants using our android application. A sensor which will record the soil moisture level and a water pump is attached to it which will be activated through one click on android application. This project is made to save plants and encourage people to grow more plants and make a better environment. To achieve this, we have to water them regularly and this can be done using this smart application where you can check soil humidity of your plants and water them according to their health. This will target every person who wants to save their plants. This is very unique feature of this application that user will be able to find out the current humidity condition of the plant and water them accordingly through their application."
        android:textColor="@color/black"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="189dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_marginBottom="17dp"
        android:layout_toEndOf="@+id/imageView3"
        android:text="Cure Plants"
        android:textColor="#336600"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="16dp" />

</RelativeLayout>
